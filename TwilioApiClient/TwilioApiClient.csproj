<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Authors>FabienP, Unitee</Authors>
        <PackageId>Unitee.Twilio.ApiClient</PackageId>
        <Version>1.0.0</Version>
        <NeutralLanguage>en-US</NeutralLanguage>
        <VersionPrefix>1.0.0</VersionPrefix>
        <Title>.NET Core Twilio API client</Title>
        <Description>A .NET Core api client for Twilio API</Description>
        <PackageProjectUrl>https://www.nuget.org/packages/Unitee.Twilio.ApiClient/</PackageProjectUrl>
        <RepositoryUrl>https://github.com/uniteeio/dotnet-core-twilio-api-client</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.1.1"/>
        <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="2.1.1"/>
        <PackageReference Include="Twilio" Version="5.22.0"/>
    </ItemGroup>

</Project>
